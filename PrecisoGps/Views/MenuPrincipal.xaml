<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PrecisoGps.Views.MenuPrincipal"
             Title="Menú Principal"
             NavigationPage.HasNavigationBar="False">
    <!-- Fondo degradado -->
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#001F3F" Offset="0.0" />
            <GradientStop Color="#0074D9" Offset="0.4" />
            <GradientStop Color="#00B19F" Offset="0.7" />
            <GradientStop Color="#00F2A9" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="EmojiStyle" TargetType="Label">
                <Setter Property="FontSize" Value="40" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="Margin" Value="0,10,0,5" />
            </Style>

            <Style x:Key="ButtonTextStyle" TargetType="Label">
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="HorizontalTextAlignment" Value="Center" />
                <Setter Property="Margin" Value="0,5,0,15" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Espacio superior -->
        <BoxView Grid.Row="0" HeightRequest="40" Color="Transparent" />

        <!-- Cabecera con logo y título -->
        <StackLayout Grid.Row="1" Margin="0,20,0,40">
            <Image Source="icon.png"
                WidthRequest="90"
                HeightRequest="90"
                HorizontalOptions="Center" />

            <Label Text="PRECISOGPS" 
                   FontSize="30" 
                   FontAttributes="Bold" 
                   TextColor="White" 
                   HorizontalOptions="Center"
                   Margin="0,15,0,5" />
            <Label Text="Sistema Integral de Gestión" 
                   FontSize="18" 
                   TextColor="#E0E0E0" 
                   HorizontalOptions="Center" />
        </StackLayout>

        <!-- 3 Botones verticales -->
        <StackLayout Grid.Row="2" 
                     Spacing="15" 
                     VerticalOptions="Center"
                     Margin="15,0">

            <!-- Botón 1: Gestión de Conductores -->
            <Frame BackgroundColor="#3498DB"
                   BorderColor="#FFFFFF"
                   CornerRadius="15"
                   HasShadow="True"
                   Padding="0"
                   HeightRequest="100">
                <Grid Padding="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Emoji con círculo de fondo -->
                    <Frame Grid.Column="0"
                           BackgroundColor="#FFFFFF30" 
                           CornerRadius="50"
                           HeightRequest="70" 
                           WidthRequest="70"
                           Margin="15,0" 
                           Padding="0"
                           VerticalOptions="Center"
                           HorizontalOptions="Center">
                        <Label Text="🚗" 
                               FontSize="35"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
                    </Frame>

                    <Label Grid.Column="1" 
                           Text="GESTIÓN DE CONDUCTORES" 
                           Style="{StaticResource ButtonTextStyle}"
                           HorizontalOptions="Start" />

                    <Button Grid.ColumnSpan="2"
                            BackgroundColor="Transparent"
                            Clicked="OnAsignacionConductorClicked" />
                </Grid>
            </Frame>

            <!-- Botón 2: Reportes Recaudo -->
            <Frame BackgroundColor="#2ECC71"
                   BorderColor="#FFFFFF"
                   CornerRadius="15"
                   HasShadow="True"
                   Padding="0"
                   HeightRequest="100">
                <Grid Padding="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Emoji con círculo de fondo -->
                    <Frame Grid.Column="0"
                           BackgroundColor="#FFFFFF30" 
                           CornerRadius="50"
                           HeightRequest="70" 
                           WidthRequest="70"
                           Margin="15,0" 
                           Padding="0"
                           VerticalOptions="Center"
                           HorizontalOptions="Center">
                        <Label Text="📊" 
                               FontSize="35"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
                    </Frame>

                    <Label Grid.Column="1" 
                           Text="REPORTES RECAUDO" 
                           Style="{StaticResource ButtonTextStyle}"
                           HorizontalOptions="Start" />

                    <Button Grid.ColumnSpan="2"
                            BackgroundColor="Transparent"
                            Clicked="OnContadoresClicked" />
                </Grid>
            </Frame>

            <!-- Botón 3: Registrar Recaudo Diario -->
            <Frame BackgroundColor="#9B59B6"
                   BorderColor="#FFFFFF"
                   CornerRadius="15"
                   HasShadow="True"
                   Padding="0"
                   HeightRequest="100">
                <Grid Padding="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Emoji con círculo de fondo -->
                    <Frame Grid.Column="0"
                           BackgroundColor="#FFFFFF30" 
                           CornerRadius="50"
                           HeightRequest="70" 
                           WidthRequest="70"
                           Margin="15,0" 
                           Padding="0"
                           VerticalOptions="Center"
                           HorizontalOptions="Center">
                        <Label Text="💰" 
                               FontSize="35"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
                    </Frame>

                    <Label Grid.Column="1" 
                           Text="REGISTRAR RECAUDO DIARIO" 
                           Style="{StaticResource ButtonTextStyle}"
                           HorizontalOptions="Start" />

                    <Button Grid.ColumnSpan="2"
                            BackgroundColor="Transparent"
                            Clicked="OnCrearReporteClicked" />
                </Grid>
            </Frame>
        </StackLayout>

        <!-- Pie de página -->
        <Label Grid.Row="3" 
               Text="© 2025 PrecisoGPS" 
               TextColor="White" 
               FontSize="14" 
               HorizontalOptions="Center"
               VerticalOptions="End"
               Margin="0,0,0,25" />
    </Grid>
</ContentPage>